{
    "title": "Parent finger keyconfig.",
    "rules": [
        {
            "description": "Ctrl to Eisuu if alone.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ]
                }
            ]
        },
        {
            "description": "CapsLock to Fn. If alone, to Kana",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    },
                    "to": [
                        {
                            "key_code": "fn",
                            "lazy": true
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ]
                }
            ]
        },
        {
            "available_since": "12.3.0",
            "description": "SandS",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}